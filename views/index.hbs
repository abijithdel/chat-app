<title>Chat</title>

<section class="chat-cotainer">
    <div class="root">
        <div class="user-div">
            <div class="head">
                <h3>{{username}}</h3>
                <a href="/auth/logout">Log Out</a>
            </div>
            <div class="search">
                <form action="/search" method="post">
                    <input type="text" name="search" placeholder="Search..! User">
                    <button>Search</button>
                </form>
            </div>
            {{#each user}}
            <div class="users">
                <img src="/profile/{{this.img}}" alt="user@email.in">
                <div class="info">
                    <p>{{this.email}}</p>
                    <p id="toid" style="display: none;">{{this._id}}</p>
                    {{#if this.status}}
                    <span class="online">Online</span>
                    {{else}}
                    <span class="offline">Offline</span>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
        <div class="chat-div">
            <div class="user-name">
                <img src="/img/back-icon.png" alt="back-icon">
                <h1 class="none" id="chat-username">UserName</h1>
                <p id="fromid" style="display: none;">{{fromuser._id}}</p>
            </div>
            <div class="chat-box none" id="chat-box">
                {{!-- message Box--}}
            </div>
            <form class="input-box none" id="form">
                <input type="text" value="{{fromuser._id}}" style="display: none;" id="statusid">
                <input type="text" placeholder="Message" class="none" id="input">
                <button class="none">Send</button>
            </form>
            <div class="none-mes">
                <span class="chat-now">Chat Now</span>
            </div>
        </div>
    </div>
</section>

<script src="/js/chat.js"></script>


